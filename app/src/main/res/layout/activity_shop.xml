<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.coonax.coonax.ui.ShopActivity"
    android:background="@color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_shop"
            android:src="@drawable/visuel_les_vikings"
            android:scaleType="centerInside"
            android:layout_gravity="top|center_horizontal"
            android:paddingBottom="300dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="245dp"
        android:weightSum="1" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/scrollView_desc_shop"
            android:layout_weight="0.46" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_desc_shop"
                android:id="@+id/textView"
                android:textColor="@color/peter_river"
                android:textSize="10pt" />
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/peter_river_dark"
            android:weightSum="1"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Longitude :"
                android:id="@+id/title_longitude_shop"
                android:layout_weight="0.47"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center|start"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="@string/value_longitude_shop"
                android:id="@+id/text_value_longitude_shop"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="end"
                android:layout_weight="0.51" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/peter_river"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Latitude :"
                android:id="@+id/title_latitude_shop"
                android:layout_weight="0.40"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center|start"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_latitude_shop"
                android:id="@+id/text_value_latitude_shop"
                android:layout_weight="0.58"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="end" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
