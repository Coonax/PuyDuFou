<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:id="@+id/activity_show_layout"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.coonax.coonax.ui.ShowActivity"
                android:background="#ffffffff">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:layout_marginBottom="400dp"
            android:id="@+id/linearLayout"
            android:layout_alignParentEnd="true">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="201dp"
                android:layout_height="match_parent">
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="50dp"
                    android:id="@+id/ratingBar"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="#34495e">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/time_show"
                    android:id="@+id/text_time_show"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textIsSelectable="false"
                    android:autoText="false"
                    android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="135dp"
            android:weightSum="1">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_show"
                android:src="@drawable/visuel_les_vikings"
                android:layout_marginBottom="50dp" />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="245dp"
            android:weightSum="1">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:id="@+id/scrollView"
                android:layout_weight="0.46">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_desc_short_show"
                    android:id="@+id/text_long_desc_show"
                    android:textColor="#ff34495e"
                    android:textSize="10pt" />
        </ScrollView>

        <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/button_more_informations"
                android:background="@drawable/button_more_informations"
                android:layout_marginTop="15dp" />
    </LinearLayout>

</RelativeLayout>
