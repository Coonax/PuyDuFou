<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row_selector"
                android:padding="8dp" >

    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:maxWidth="290dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/description"
            android:textColor="@color/concrete"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:editable="false"
            android:enabled="false"
            android:text="Lorem ipsum dolor sit amet,Lorem ipsum dolor sit amet,Lorem ipsum dolor sit amet,Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:id="@+id/time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/asbestos"
            android:textSize="@dimen/time"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="290dp"
            android:text="00m"/>

    <TextView
            android:id="@+id/title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:textColor="@color/peter_river"
            android:layout_marginTop="10dp"
            android:text="Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet"
            android:singleLine="true"
            android:ellipsize="end" />

    <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_add_new_schedule"
            android:background="@drawable/button_add_schedule"
            android:layout_alignEnd="@+id/time"
            android:layout_toEndOf="@+id/description"
            android:layout_alignTop="@+id/description"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
</RelativeLayout>