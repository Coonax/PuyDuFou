<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.coonax.coonax.ui.RestaurantActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_marginBottom="400dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp"
                >

            <Button
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_localisation"
                    android:background="@drawable/localisation"
                    />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_menu_restaurant"
                android:id="@+id/button_menu_restaurant"
                android:textColor="#ffffff"
                android:background="#9b59b6"
                android:textSize="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="185dp"
            android:weightSum="1"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_restaurant"
            android:src="@drawable/placeholder"
            android:layout_marginBottom="100dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:weightSum="1" >

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="50dp"
                android:id="@+id/rating_restaurant"
                android:layout_gravity="center_horizontal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/scrollView_desc_restaurant"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_desc_short_show"
                android:id="@+id/text_long_desc_restaurant"
                android:textColor="#9b59b6"
                android:textSize="10pt" />
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/amethyst_dark"
            android:weightSum="1"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Longitude :"
                android:id="@+id/title_longitude_restaurant"
                android:layout_weight="0.47"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center|start"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:id="@+id/text_value_longitude_restaurant"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="end"
                android:layout_weight="0.51" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/amethyst"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Latitude :"
                android:id="@+id/title_latitude_restaurant"
                android:layout_weight="0.40"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center|start"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:id="@+id/text_value_latitude_restaurant"
                android:layout_weight="0.58"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="end" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
